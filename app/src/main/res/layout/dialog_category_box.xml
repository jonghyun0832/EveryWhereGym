<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background_round">

    <CheckBox
        android:id="@+id/checkBox_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:minHeight="50dp"
        android:text="등"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/checkBox_chest"
        app:layout_constraintStart_toStartOf="@+id/checkBox_chest"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_chest" />

    <CheckBox
        android:id="@+id/checkBox_chest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minHeight="50dp"
        android:text="가슴"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/checkBox_leg"
        app:layout_constraintStart_toStartOf="@+id/checkBox_leg"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_leg" />

    <CheckBox
        android:id="@+id/checkBox_leg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minHeight="50dp"
        android:text="하체"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/checkBox_abs"
        app:layout_constraintStart_toStartOf="@+id/checkBox_abs"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_abs" />

    <CheckBox
        android:id="@+id/checkBox_whole"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:minHeight="50dp"
        android:text="전신"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_abs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minHeight="50dp"
        android:text="복근"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/checkBox_whole"
        app:layout_constraintStart_toStartOf="@+id/checkBox_whole"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_whole" />

</androidx.constraintlayout.widget.ConstraintLayout>